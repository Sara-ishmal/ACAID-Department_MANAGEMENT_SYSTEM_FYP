<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teacher Information"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Software Engineering Department"
            android:textSize="15sp"
            android:textColor="#333333"
            android:layout_marginBottom="24dp" />

        <!-- Full Name -->
        <EditText
            android:id="@+id/etTeacherName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter Full Name"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:textSize="14sp" />

        <!-- Teacher Type Spinner -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please select teacher type"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginTop="12dp" />

        <Spinner
            android:id="@+id/spinnerTeacherType"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_bg" />

        <!-- Classes You Teach (Multi-Selection) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Classes you teach"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnSelectClasses"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Select Classes"
            android:backgroundTint="@color/white"
            android:padding="12dp"
            android:textSize="14sp"
            android:textColor="@color/primary"/>

        <!-- Subjects You Teach (Multi-Selection) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subjects you teach"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnSelectSubjects"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Select Subjects"
            android:backgroundTint="@color/white"
            android:padding="12dp"
            android:textSize="14sp"
            android:textColor="@color/primary" />

        <!-- Optional Employee ID -->
        <EditText
            android:id="@+id/etEmployeeId"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Employee ID (optional)"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:textSize="14sp"
            android:layout_marginTop="12dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveTeacher"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Save Information"
            android:textAllCaps="false"
            android:backgroundTint="@color/primary"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:background="@drawable/btn_bg" />

        <!-- ProgressBar -->
        <LinearLayout
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
