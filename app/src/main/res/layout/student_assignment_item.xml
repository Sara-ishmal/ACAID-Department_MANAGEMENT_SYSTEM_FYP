<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:elevation="8dp"
    app:strokeColor="@color/light_primary"
    app:strokeWidth="1dp"
    app:cardUseCompatPadding="true"
    android:backgroundTint="@color/white"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginBottom="16dp">
        <TextView
            android:id="@+id/subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subject: Software Re-Engineering"
            android:background="@drawable/rounded_background"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="8dp"

            />

        <TextView
            android:id="@+id/assignmentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title: Basic Concepts of S_RE"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/primary"
            android:layout_marginBottom="8dp"

           />

        <TextView
            android:id="@+id/assignmentDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/profile_backgroud"
            android:padding="15dp"
            android:fontFamily="sans-serif-light"
            android:lineSpacingExtra="4dp"
            android:text="Assignment:\n1. Re-Enginenering goals ,models and tools with examples \n2. Characteristics of maintainable software"
            android:textColor="@color/white"
            android:textSize="15sp"

            />

        <TextView
            android:id="@+id/teacherName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="monospace"
            android:padding="5dp"
            android:text="Teacher: Dr. Qaisera Ramzan"
            android:textColor="@color/primary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/deadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Deadline: 2025-04-30"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
