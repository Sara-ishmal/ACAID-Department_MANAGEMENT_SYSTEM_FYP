<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Acaid" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">#673AB7</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/light_primary</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
    </style>
    <style name="SummaryCardStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:gravity">center</item>
        <item name="cardElevation">6dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/summary_card_bg</item>
    </style>


</resources>